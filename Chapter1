    let currentQuestionIndex = 0;
    const form = document.getElementById('quiz-form');
    const submitButton = document.getElementById('submit-button');
    const nextButton = document.getElementById('next-button');
    const feedback = document.getElementById('feedback');
    const progressBar = document.getElementById('progress');

    function loadQuestion() {
        if (currentQuestionIndex >= quizData.length) {
            form.innerHTML = `<p style="text-align: center;">ğŸ‰ æ­å–œä½ ï¼Œå®Œæˆäº†æ‰€æœ‰é¢˜ç›®ï¼</p>`;
            submitButton.classList.add('hidden');
            nextButton.classList.add('hidden');
            return;
        }

        const q = quizData[currentQuestionIndex];
        form.innerHTML = `
            <div class="question">
                ${currentQuestionIndex + 1}. ${q.question.replace('____', 'ï¼ˆ<span style="color: #e65100;">&nbsp;&nbsp;&nbsp;&nbsp;</span>ï¼‰')}
            </div>
            <div class="options">
                ${q.options.map((option, index) => `
                    <label>
                        <input type="radio" name="answer" value="${option}" id="q${currentQuestionIndex}-opt${index}">
                        ${option}
                    </label>
                `).join('')}
            </div>
        `;
        feedback.innerHTML = '';
        feedback.classList.add('hidden');
        submitButton.classList.remove('hidden');
        nextButton.classList.add('hidden');
        updateProgress();
    }

    function updateProgress() {
        const percentage = (currentQuestionIndex / quizData.length) * 100;
        progressBar.style.width = percentage + '%';
    }

    function checkAnswer(event) {
        event.preventDefault();
        const selectedOption = form.querySelector('input[name="answer"]:checked');

        if (!selectedOption) {
            feedback.innerHTML = 'è¯·é€‰æ‹©ä¸€ä¸ªç­”æ¡ˆï¼';
            feedback.classList.remove('hidden');
            feedback.classList.remove('correct', 'incorrect');
            return;
        }

        const userAnswer = selectedOption.value;
        const correctAnswer = quizData[currentQuestionIndex].answer;
        const questionText = quizData[currentQuestionIndex].question;

        if (userAnswer === correctAnswer) {
            feedback.innerHTML = `âœ… æ­å–œä½ ï¼Œç­”å¯¹äº†ï¼æ­£ç¡®ç­”æ¡ˆæ˜¯ï¼š${correctAnswer}`;
            feedback.classList.remove('incorrect');
            feedback.classList.add('correct');
        } else {
            feedback.innerHTML = `âŒ ç­”é”™äº†ã€‚æ­£ç¡®ç­”æ¡ˆæ˜¯ï¼š<span style="color: green;">${correctAnswer}</span>`;
            feedback.classList.remove('correct');
            feedback.classList.add('incorrect');
        }
        feedback.classList.remove('hidden');

        submitButton.classList.add('hidden');
        nextButton.classList.remove('hidden');
    }

    function nextQuestion() {
        currentQuestionIndex++;
        loadQuestion();
    }

    submitButton.addEventListener('click', checkAnswer);
    nextButton.addEventListener('click', nextQuestion);

    // åˆå§‹åŠ è½½ç¬¬ä¸€é¢˜
    loadQuestion();
