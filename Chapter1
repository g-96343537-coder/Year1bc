    <title>一年级生字填充练习</title>
    <style>
        body {
            font-family: 'LiHei Pro', sans-serif;
            background-color: #ffe0b2; /* 浅橙色背景 */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .quiz-container {
            background-color: #ff9800; /* 橙色背景 */
            padding: 30px 40px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .question {
            margin-bottom: 25px;
            font-size: 22px;
            line-height: 1.6;
            font-weight: bold;
        }

        .options label {
            display: block;
            background-color: #fff3e0;
            padding: 12px 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 18px;
            font-weight: normal;
            border: 1px solid #ffcc80;
        }

        .options label:hover {
            background-color: #ffecb3;
        }

        .options input[type="radio"] {
            margin-right: 10px;
            transform: scale(1.2);
        }

        .submit-btn {
            display: block;
            width: 100%;
            padding: 15px;
            background-color: #e65100; /* 深橙色按钮 */
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 20px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s;
            margin-top: 20px;
        }

        .submit-btn:hover {
            background-color: #ff7043;
        }

        .submit-btn:active {
            transform: scale(0.99);
        }

        .feedback {
            margin-top: 20px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

        .correct {
            color: green;
        }

        .incorrect {
            color: red;
        }

        .hidden {
            display: none;
        }

        .progress-bar {
            height: 10px;
            background-color: #fbe9e7;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        .progress {
            height: 100%;
            width: 0%;
            background-color: #e65100;
            border-radius: 5px;
            transition: width 0.5s;
        }
